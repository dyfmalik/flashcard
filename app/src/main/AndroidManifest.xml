<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.bit.osf.flashcard"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        tools:replace="android:icon"
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_flashcard"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_box_list"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BoxListActivity_"
            android:label="@string/title_activity_box_list" />
        <activity
            android:name=".CardListActivity"
            android:label="@string/title_activity_card_list" />
        <activity
            android:name=".CardViewActivity"
            android:label="@string/title_activity_card_view" />
        <activity
            android:name=".CardEditActivity"
            android:label="@string/title_activity_card_edit" />
        <activity android:name=".CreditActivity" />
        <activity
            android:name=".CardActivity"
            android:label="@string/title_activity_card" >
        </activity>
        <activity
            android:name=".CardListActivity_"
            android:label="CardList" >
        </activity>
        <activity
            android:name=".CardManageActivity"
            android:label="Manage Kartu" >
        </activity>


    </application>

</manifest>
